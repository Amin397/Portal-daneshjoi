<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.33">
            <ImageButton
                android:id="@+id/btn_khabgah_id"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/background_btns"
                android:padding="15dp"
                android:src="@drawable/ic_khabgah_24dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_khabgah_id"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textAlignment="center"
                android:text="@string/khabgah"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.33">
            <ImageButton
                android:id="@+id/btn_parking_id"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/background_btns"
                android:padding="15dp"
                android:src="@drawable/ic_parking_24dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_parking_id"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textAlignment="center"
                android:text="@string/parking"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="35dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.33">
            <ImageButton
                android:id="@+id/btn_ghaza_id"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/background_btns"
                android:padding="15dp"
                android:src="@drawable/ic_ghaza_24dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_ghaza_id"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textAlignment="center"
                android:text="@string/ghaza"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="35dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.33">
            <ImageButton
                android:id="@+id/btn_vam_id"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/background_btns"
                android:padding="15dp"
                android:src="@drawable/ic_vam_24dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_vam_id"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textAlignment="center"
                android:text="@string/vam"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.33">
            <ImageButton
                android:id="@+id/btn_eshteghal_id"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/background_btns"
                android:padding="15dp"
                android:src="@drawable/ic_eshteghal_24dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_eshteghal_id"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textAlignment="center"
                android:text="@string/eshteghal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.33">
            <ImageButton
                android:id="@+id/btn_morakhasi_id"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/background_btns"
                android:padding="15dp"
                android:src="@drawable/ic_morakhasi_24dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_morakhasi_id"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textAlignment="center"
                android:text="@string/morakhasi"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
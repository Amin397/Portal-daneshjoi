<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activities"
    tools:context=".Activity.Omor_mali_activities.Vaziate_mali">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar_vaziat_id"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?attr/actionBarSize"/>

    <Spinner
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_below="@id/toolbar_vaziat_id"
        android:id="@+id/spn_nimsaltahsili_vaziat_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DropSpinner"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spn_nimsaltahsili_vaziat_id"
        android:layout_marginTop="5dp">

        <TableLayout
            android:id="@+id/table_layout_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/back_1">

            <TableRow
                android:id="@+id/row0_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bestankar"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bedehkar"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shomarehesabjari"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tarikhfish"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shomarefish"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/itemmali"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/red_color" />

            <ListView
                android:id="@+id/list_vaziat_id"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="5dp"
                android:dividerHeight="3dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/red_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:id="@+id/txt_jamekol_id"
                    android:text="@string/jamekol"
                    android:textColor="@color/black_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_sumofbestankar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="65215485"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/green_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_sumofbedehkar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_toEndOf="@+id/txt_sumofbestankar_id"
                    android:layout_toRightOf="@+id/txt_sumofbestankar_id"
                    android:text="54875125"
                    android:textColor="@color/red_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="@string/vaziatekol"
                    android:layout_below="@id/txt_jamekol_id"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:textColor="@color/black_color"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="@string/showvaziatekol"
                    android:layout_below="@id/txt_sumofbestankar_id"
                    android:layout_margin="20dp"
                    android:textColor="@color/green_color"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </TableLayout>
    </ScrollView>
</RelativeLayout>


